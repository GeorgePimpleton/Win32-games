STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
{
   ICON           IDI_ICON, IDC_STATIC, 7, 7, 20, 20, SS_SUNKEN
   CTEXT          "Space Out 3 b", IDC_STATIC, 40, 12, 100, 8

   CTEXT          "Showing Off Your Game with Demo Mode", IDC_STATIC, 7, 35, 166, 8
